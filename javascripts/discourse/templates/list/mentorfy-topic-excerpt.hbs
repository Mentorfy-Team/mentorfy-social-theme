{{#if topic.hasExcerpt}}
<div class="topic-excerpt topic-excerpt-extended">
  {{dirSpan topic.escapedExcerpt htmlSafe="true"}}
  {{#if topic.excerptTruncated}}
  <span class="topic-excerpt-more">{{i18n "read_more"}}</span>
  {{/if}}
</div>
{{/if}}

{{#if topic.has_video}}
<div class="topic-image">
  <div class="topic-video-embed">
    <iframe width="100%" height="100%" src="{{topic.video_embed_url}}" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
{{else if topic.image_url}}
<div class="topic-image">
  {{#if (theme-setting "topic_image_backdrop")}}
  <div class="topic-image__backdrop" style="background-image: url({{topic.image_url}});" loading="lazy"></div>
  {{/if}}
  <img src="{{topic.image_url}}" class="topic-image__img" loading="lazy">
</div>
{{/if}}